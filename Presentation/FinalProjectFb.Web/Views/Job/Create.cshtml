
@using FinalProjectFb.Domain.Entities
@using FinalProjectFb.ViewModels
@model CreateJobVM

<!doctype html>
<html lang="en">
<head>
	<title>Contact Form 03</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/assets/job/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Contact Form #03</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12">
					<div class="wrapper">
						<div class="row mb-5">
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-map-marker"></span>
									</div>
									<div class="text">
										<p><span>Address:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-phone"></span>
									</div>
									<div class="text">
										<p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-paper-plane"></span>
									</div>
									<div class="text">
										<p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-globe"></span>
									</div>
									<div class="text">
										<p><span>Website</span> <a href="#">yoursite.com</a></p>
									</div>
								</div>
							</div>
						</div>
						<div class="row no-gutters">
							<div class="col-md-7">
								<div class="contact-wrap w-100 p-md-5 p-4">
									<h3 class="mb-4">Contact Us</h3>
									<div id="form-message-warning" class="mb-4"></div>
									<div id="form-message-success" class="mb-4">
										Your message was sent, thank you!
									</div>
									<form method="POST" enctype="multipart/form-data">
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" asp-for="Name">Job Name</label>
													<input asp-for="Name" type="text" class="form-control" placeholder="Name">
													<span class="text-danger" asp-validation-for="Name"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" asp-for="Vacancy">Vacancy</label>
													<input asp-for="Vacancy" type="number" class="form-control" id="vacancyInput">
													<span class="text-danger" asp-validation-for="Vacancy"></span>
												</div>
											</div>

											<script>
												document.getElementById('vacancyInput').addEventListener('input', function () {
													var enteredValue = parseInt(this.value);

													// Kontrol: Eksi veya sıfır değeri seçiliyorsa, değeri sıfırla
													if (enteredValue <= 0) {
														alert('Lütfen pozitif bir sayı girin!');
														this.value = ''; // Değeri sıfırla
													}
												});
											</script>
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" asp-for="Salary">Salary</label>
													<input asp-for="Salary" type="number" class="form-control" id="deadlineInput">
													<span class="text-danger" asp-validation-for="Salary"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" asp-for="Deadline">DeadLine</label>
													<input asp-for="Deadline" type="date" class="form-control" id="deadlineInput" value="">
													<span class="text-danger" asp-validation-for="Deadline"></span>
												</div>
											</div>
											
											<script>
												document.getElementById('deadlineInput').addEventListener('input', function () {
													var selectedDate = new Date(this.value);
													var currentDate = new Date();

													// Kontrol: Geçmiş tarih seçiliyorsa, değeri sıfırla
													if (selectedDate < currentDate) {
														alert('Geçmiş bir tarih seçemezsiniz!');

														// Şu anki tarihi al ve formatla
														var today = new Date();
														var formattedToday = today.toISOString().split('T')[0];

														// Seçili tarihi şu anki tarih ile değiştir
														this.value = formattedToday;

														// Eğer tarayıcı destekliyorsa, min özelliğini de güncelle
														if (this.min !== formattedToday) {
															this.min = formattedToday;
														}
													}
												});

												// Sayfa yüklendiğinde min özelliğini kontrol et
												document.addEventListener("DOMContentLoaded", function () {
													var today = new Date();
													var formattedToday = today.toISOString().split('T')[0];
													var deadlineInput = document.getElementById('deadlineInput');

													if (deadlineInput.min !== formattedToday) {
														deadlineInput.min = formattedToday;
													}
												});
											</script>



											<div class="col-md-6">
												
												<select asp-for="CategoryId" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))">

													<option disabled selected>Choose Category</option>
												</select>
												<span asp-validation-for="CategoryId" class="text-danger"></span>
											</div>

											<div class="col-md-12">
												<div class="form-group">
													<input type="submit" value="Send Message" class="btn btn-primary">
													<div class="submitting"></div>
												</div>
											</div>
										</div>
									</form>
								</div>
							</div>
							<div class="col-md-5 d-flex align-items-stretch">
								<div class="info-wrap w-100 p-5 img" style="background-image: url(/assets/job/images/img.jpg);">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/assets/job/js/jquery.min.js"></script>
	<script src="~/assets/job/js/popper.js"></script>
	<script src="~/assets/job/js/bootstrap.min.js"></script>
	<script src="~/assets/job/js/jquery.validate.min.js"></script>
	<script src="~/assets/job/js/main.js"></script>

</body>
</html>

 