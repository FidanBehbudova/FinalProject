@using FinalProjectFb.Application.ViewModels
@model UpdateCategoryVM
<main>
	<div class="container">
		<div class="page-title-container">

			<a href="#" class="muted-link pb-1 d-inline-block breadcrumb-back">
				<i data-acorn-icon="chevron-left" data-acorn-size="13"></i>
				<span class="text-small align-middle">Home</span>
			</a>
			<h1 class="mb-0 pb-0 display-4" id="title">Category List</h1>
			<div class="col-md-6 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Create Category</h4>

						<form class="forms-sample" method="post" enctype="multipart/form-data">
							<div class="form-group">
								<label asp-for="Icon" for="exampleInputUsername1">Icon</label>
								<input asp-for="Icon" class="form-control" id="exampleInputUsername1" placeholder="Icon">
								<span asp-validation-for="Icon" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Name" for="exampleInputUsername1">Name</label>
								<input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<br />
							<div class="form-check form-check-flat form-check-primary">
								<label class="form-check-label">
									<input type="checkbox" class="form-check-input">
									Remember me
									<i class="input-helper"></i>
								</label>
							</div>
							<br />
							<button type="submit" class="btn btn-primary mr-2">Submit</button>
							<button class="btn btn-light">Cancel</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


</main>